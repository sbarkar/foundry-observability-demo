# =============================================================================
# Foundry Observability Demo - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values from your Azure deployment
#
# To get these values after deployment:
# az deployment group show --resource-group rg-foundry-demo --name main --query properties.outputs
#
# =============================================================================

# Azure Resource Group
RESOURCE_GROUP_NAME=rg-foundry-demo

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=
APPINSIGHTS_INSTRUMENTATIONKEY=

# Azure Storage
STORAGE_ACCOUNT_NAME=
STORAGE_ACCOUNT_KEY=  # Get from Key Vault: AzureSearchAdminKey
STORAGE_BLOB_ENDPOINT=

# Azure AI Search
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_ADMIN_KEY=  # Get from Key Vault: AzureSearchAdminKey
AZURE_SEARCH_SERVICE_NAME=

# Azure Key Vault
AZURE_KEY_VAULT_ENDPOINT=
KEY_VAULT_NAME=

# Azure Function App
AZURE_FUNCTION_APP_URL=
FUNCTION_APP_NAME=

# Static Web App
STATIC_WEB_APP_URL=
STATIC_WEB_APP_NAME=

# Azure Functions Runtime (for local development)
AzureWebJobsStorage=
WEBSITE_CONTENTAZUREFILECONNECTIONSTRING=
WEBSITE_CONTENTSHARE=
FUNCTIONS_EXTENSION_VERSION=~4
FUNCTIONS_WORKER_RUNTIME=python

# Microsoft Foundry (manual setup required)
FOUNDRY_PROJECT_ENDPOINT=
FOUNDRY_PROJECT_ID=

# Development Settings (optional)
ENVIRONMENT=local
DEBUG=true
LOG_LEVEL=INFO

